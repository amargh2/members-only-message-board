extends layout

block content 
  div.container  
    h1 Sign Up Today
    p Thanks for being here. Sign up to see what people are saying.
     div.container
      div(id='errors')= errors ? errors.map(error => error.msg) : 'hi'
      form(action="/sign-up-form" method='post') 
        div  
          label(for='first_name') First Name
          input(type='text' id='first_name' name='first_name')
        div  
          label(for='last_name') Last Name
          input(type='text' id='last_name' name='last_name')
        div
        div  
          label(for="username") Choose Username: 
          input(type="text" id='username' name='username')  
        div  
          label(for="password") Choose Password: 
          input(type="text" id='password' name='password')
          span(id='passworderror')
        div  
          label(for="confirmpasssword") Confirm Password:
          input(type="text" id='confirmpassword' name='confirmpassword')
        div  
          input(type="submit")